<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Welcome'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                id: llogin
                text: 'Login'
                font_size: 18
                align: 'left'
                text_size: root.width-20, 20
                multiline:True

            TextInput:
                id: login
                multiline:False
                font_size: 28
                on_text_validate: password.focus = True

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Password'
                align: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28
                on_text_validate: root.do_login(login.text, password.text)

        Button:
            id: btnOk
            text: 'Connexion'
            font_size: 24
            on_press: root.do_login(login.text, password.text)